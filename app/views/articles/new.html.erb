<%= form_with model: @article, html: { class: "article-form" } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :avatar, "Upload Image", class: "form-label" %>
    <%= form.file_field :avatar, class: "form-control-file" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Article", class: "btn-primary" %>
  </div>
<% end %>
